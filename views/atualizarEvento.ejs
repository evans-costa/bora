<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tela de Cadastro de Eventos</title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-night.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />
    <link
    rel="stylesheet"
    href="/stylesheets/cadastro-eventos.css"
  />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
      crossorigin="anonymous"
    ></script>
</head>

<body>
  <%- include('./partials/header') %>

  <div class="container" id="criacao-evento">
        <div class="form">
          <form id=form-cadastro method="post" action="?_method=PUT" enctype="multipart/form-data">
                <div class="title-form">
                    <h1>Alterar / Deletar um evento</h1>
                </div>
        </div>
    <label for="picture">Link da Foto</label>
    <input id="picture" name="picture" type="text" value="<%=evento.imagem_evento%>"/>

    <label for="file">Foto</label>
    <input id="file" name="file" type="file" accept="image/png, image/jpeg"/>

    <label for="title">Título do Evento</label>
    <input id="title" name="title" type="text" value="<%=evento.nome_evento%>"/>

    <label for="date">Data do Evento</label>
    <input id="date" name="date" type="date" value="<%=evento.data_evento%>"/>

    <label for="price">Preço do Evento</label> 
    <input id="price" name="price" type="text" value="<%=evento.preco_evento%>"/>

    <label for="description">Descrição</label>
    <input id="description" name="description" type="text" value="<%=evento.descricao_event%>"/>

  <label for="category">Categoria</label>
    <select name="category_id">
      <% for (let category of categories) { %>
        <option value="<%=evento.fk_categoria%>">
          <%=category.tipo_evento%>
      </option>
      <% } %>
    </select>

  <div class="button-cadastrar">
    <button class="btn btn-primary" type="submit">Salvar Alterações</button>
  </div>
</form>
</div> 

  <%- include('./partials/footer') %>

  <script src="/javascripts/index.js"></script>
  <script src="/javascripts/cadastro.js"></script>

</body>
</html>