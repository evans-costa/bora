<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="dark" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-night.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <link rel="stylesheet" href="/stylesheets/users-list.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />
    <title>Administrador - Lista de Usuários</title>
  </head>
  <body>
    <%- include('./partials/header') %>
    <main class="listUsers-container">
      <h1>Lista de Usuários</h1>
      <div class="users-list">
        <% for(let users of user ) { %>
        <table>
          <thead>
            <tr>
              <th><%= users.first_name%></th>
              <td></a></td>
              <td><a href="<%=users.id%>/usuario/editarusuario">Editar</td>
              <td>
                <form 
                action="<%=users.id%>/usuario/deletarusuario?_method=DELETE" 
                method="post">
                <button class="excluir-conta" type="submit">Excluir conta</button>
            </form>
              </td>
            </tr>
          </thead>
        </table>

        <% } %>
      </div>
    </main>

    <%- include('./partials/footer') %>
    <script 
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
      crossorigin="anonymous">
    </script>
  </body>
</html>
