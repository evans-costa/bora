        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
      </div>
    </button>
    <div
      class="offcanvas offcanvas-end text-bg-dark"
      tabindex="-1"
      id="offcanvasDarkNavbar"
      aria-labelledby="offcanvasDarkNavbarLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">
          <% if (locals.userIsLogged) { %> Olá, <%=userLogged.first_name %>! <% } else if (locals.adminIsLogged) { %>
          Administrador <% } else if (locals.funcionarioIsLogged) { %> Olá, <%=funcionarioLogged.nome_completo %>! <% }
          else { %> Olá, faça seu login! <% } %>
        </h5>
        <button type="button" class="btn-close btn-close-light" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <% if (locals.adminIsLogged) { %>
          <li class="nav-item">
            <a class="nav-link" href="/admin/listarusuarios">Listagem de Usuários</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/listareventos">Listagem de Eventos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/listarfuncionarios">Listagem de Funcionários</a>
          </li>
          <%- include('navHeader') %>
          <li class="nav-item">
            <a class="nav-link" href="/admin/sair">Sair</a>
          </li>
          <% } else if (locals.userIsLogged) { %>
          <li class="nav-item">
            <a class="nav-link" href="/users/perfil/<%= userLogged.id %> ">Perfil</a>
          </li>
          <%- include('navHeader') %>
          <li class="nav-item">
            <a class="nav-link" href="/users/sair">Sair</a>
          </li>
          <% } else if (locals.funcionarioIsLogged) { %>
          <li class="nav-item">
            <a class="nav-link" href="/funcionarios/<%= funcionarioLogged.id %>/listareventos">Listagem de Eventos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/eventos/cadastroevento">Cadastrar Eventos</a>
          </li>
          <%- include('navHeader') %>
          <li class="nav-item">
            <a class="nav-link" href="/funcionarios/sair">Sair</a>
          </li>
          <% } else { %> <%- include('navHeader') %>
          <li class="nav-item">
            <a class="nav-link" href="/users/cadastrar/tipocadastro">Cadastrar</a>
          </li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
