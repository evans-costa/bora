<nav class="navbar navbar-dark bg-dark" id="nav-header">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img
        src="/images/index/logo-branca.svg"
        alt="Logo"
        width="60"
        height="50"
        class="d-inline-block align-text-center" />
    </a>
    <div class="icones-nav">
      <div id="box-profile">
        <% if (locals.userIsLogged) { %>
        <a href="/users/perfil/<%=userLogged.id%>"><i id="profile-icon" class="bi bi-person-check"></i></a>
        <div>Olá, <%=userLogged.first_name %>!</div>
        <% } else if (locals.adminIsLogged) { %>
        <a href="/admin/listareventos"><i id="admin-icon" class="bi bi-person-gear"></i></a>
        <div>Olá, Administrador!</div>
        <% } else if (locals.funcionarioIsLogged) { %>
        <a href="/funcionarios/<%= funcionarioLogged.id %>/listareventos"
          ><i id="staff-icon" class="bi bi-person-vcard"></i
        ></a>
        <div>Olá, <%=funcionarioLogged.nome_completo%>!</div>
        <% } else { %>
        <a href="/login"><i id="guest-icon" class="bi bi-file-person"></i></a>
        <div>
          Olá, Visitante!
          <small>Cadastre-se, ou faça seu login!</small>
        </div>
        <% } %>
      </div>
      <div id="box-cart">
        <button
          class="bi bi-cart-check-fill"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasCart"
          aria-controls="offcanvasCart"></button>
        <div>
          Carrinho <% if (locals.carrinho) { %>
          <span id="badge-count" class="badge btn-secondary m"><%= carrinho.length %></span>
          <% } %>
        </div>
      </div>
    </div>
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasCart" aria-labelledby="offcanvasCartLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasCartLabel">Carrinho de Compras</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body-cart">
        <div class="row justify-content-start align-items-center" id="cart-content">
          <% if (locals.carrinho) { %> <% for ( let evento of carrinho ) { %>
          <div class="col-4" id="eventCartImage">
            <img id="image-cart-thumb" class="rounded-float-start" src="<%= evento.imagem %> " />
          </div>
          <div class="col-4" id="eventCartName"><%= evento.nome %></div>
          <div class="col-4" id="eventCartPrice">R$ <%= evento.preco %></div>
          <% } %> <% } %>
        </div>
        <hr />
      </div>
      <div class="mt-auto mx-auto" id="cart-buttons-modal">
        <a class="btn btn-outline-light m-3" href="/eventos" role="button">Continue comprando</a>
        <a class="btn btn-primary m-3" href="/carrinho" role="button">Ir para o carrinho</a>
      </div>
    </div>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#offcanvasDarkNavbar"
      aria-controls="offcanvasDarkNavbar">
